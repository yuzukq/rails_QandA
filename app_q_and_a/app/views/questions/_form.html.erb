<div class="form-wrapper">
  <%= form_with model: @question do |form| %>
    <% if @question.errors.any? %>
      <div class="error-messages">
        <ul>
          <% @question.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= form.label :title, 'タイトル', class: 'form-label' %>
      <%= form.text_field :title, class: 'form-field' %>
    </div>

    <div class="form-group">
      <%= form.label :name, '名前', class: 'form-label' %>
      <%= form.text_field :name, class: 'form-field' %>
    </div>

    <div class="form-group">
      <%= form.label :content, '本文', class: 'form-label' %>
      <%= form.text_area :content, class: 'form-field form-textarea' %>
    </div>

    <div class="form-group">
      <%= form.submit class: 'action-button submit-button' %>
    </div>
  <% end %>
</div>